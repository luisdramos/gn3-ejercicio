@{
    ViewBag.Title = "Departamentos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="app-departamentos" class="container mt-4">
    <h2>@ViewBag.Title</h2>

    <!-- Mensajes de estado -->
    <div v-if="loading" class="alert alert-info">
        <i class="fas fa-spinner fa-spin"></i> Cargando departamentos...
    </div>

    <div v-if="error" class="alert alert-danger">
        {{ error }}
    </div>

    <!-- Tabla de resultados -->
    <div v-if="departamentos.length > 0">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Clave</th>
                    <th>Descripción</th>
                </tr>
            </thead>
            <tbody>
                <tr v-for="depto in departamentos" :key="depto.ClaveDepartamento">
                    <td>{{ depto.ClaveDepartamento }}</td>
                    <td>{{ depto.Descripcion }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div v-else-if="!loading" class="alert alert-warning">
        No se encontraron departamentos.
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/vue@2.6.14/dist/vue.js"></script>

    <script>

        const apiUrl = '@Url.Content("~/api/GetDepartamentosAPI")';

        new Vue({
            el: '#app-departamentos',
            data: {
                departamentos: [],
                loading: true,
                error: null
            },
            mounted() {
                this.cargarDepartamentos();
            },
            methods: {
                async cargarDepartamentos() {
                    try {
                        this.loading = true;
                        this.error = null;

                        const response = await fetch(apiUrl, {
                            headers: {
                                'Accept': 'application/json'
                            }
                        });

                        if (!response.ok) {
                            throw new Error(`Error ${response.status}: ${response.statusText}`);
                        }

                        const data = await response.json();
                        this.departamentos = data;
                    } catch (err) {
                        console.error('Error al cargar departamentos:', err);
                        this.error = `Error al obtener los departamentos: ${err.message}`;
                    } finally {
                        this.loading = false;
                    }
                }
            }
        });
    </script>
}

<div id="formularioDepartamento">
    <form v-on:submit.prevent="enviarFormulario">
        <div class="mb-3">
            <label for="clave" class="form-label">Clave Departamento</label>
            <input type="number" id="clave" v-model="nuevoDepartamento.ClaveDepartamento" class="form-control" required>
        </div>

        <div class="mb-3">
            <label for="descripcion" class="form-label">Descripción</label>
            <input type="text" id="descripcion" v-model="nuevoDepartamento.Descripcion" class="form-control" required>
        </div>

        <button type="submit" class="btn btn-primary">Guardar</button>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/vue@2"></script>
<script>
    new Vue({
        el: '#formularioDepartamento',
        data: {
            nuevoDepartamento: {
                ClaveDepartamento: '',
                Descripcion: ''
            }
        },
        methods: {
            enviarFormulario() {
                fetch('/api/apipost/SetDepartamentosAPI', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(this.nuevoDepartamento)
                })
                    .then(response => {
                        if (response.ok) {
                            alert('Departamento guardado correctamente');
                            this.nuevoDepartamento.ClaveDepartamento = '';
                            this.nuevoDepartamento.Descripcion = '';
                        } else {
                            alert('Error al guardar');
                        }
                    })
                    .catch(error => {
                        console.error('Error en la solicitud:', error);
                    });
            }
        }
    });
</script>